<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!--some indetifier-->
    <persistence-unit name="hibernate-unit" transaction-type="RESOURCE_LOCAL">
        <description>
            Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <class>hibernate.model.City</class>
        <class>hibernate.model.Department</class>
        <class>hibernate.model.User</class>

        <properties>

           <!--  Database connection settings
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./IvanPiontkevich/test.db"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.show_sql" value="true"/>

            &lt;!&ndash; Init DDL operations. Possible variants:
                - create: create relation model of OOP model,
                - update: relation model will be updated with OOP model,
                - create-drop: create relation model of OOP model AND drop it on exit.
            &ndash;&gt;
            <property name="hibernate.hbm2ddl.auto" value="update"/>-->


            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!--data base must be created before init persistence.xml -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/HB_test" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="pokebrummistik" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />


        </properties>

    </persistence-unit>


</persistence>