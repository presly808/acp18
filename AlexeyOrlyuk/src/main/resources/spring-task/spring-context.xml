<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/beans/spring-aop-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/beans/spring-tx-3.0.xsd">

    <import resource="spring-orm-context.xml"/>

    <!--<tx:annotation-driven transaction-manager="transactionManager"/>-->

    <bean id="myUserDao" class="spring.dao.MyUserDao">
        <property name="factory" ref="entityManagerFactory"/>
    </bean>

    <bean id="myUserService" class="spring.service.MyUserService">
        <property name="myUserDao" ref="myUserDao"/>
    </bean>

</beans>